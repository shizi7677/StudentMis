<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xin.dao.QueryMapper">

    <!--通过调用数据库中的存储过程，来实现查询相应的信息-->
    <select id="queryProducts" statementType="CALLABLE"
            resultMap="com.xin.dao.ProductMapper.BaseResultMap"
            parameterType="java.util.Map">
        <![CDATA[

          call queryPet(
            #{in_kindid , mode=IN ,jdbcType=VARCHAR},
	        #{in_productid ,mode=IN ,jdbcType=VARCHAR},
	        #{in_itemid,  mode=IN ,jdbcType=VARCHAR}
          )

        ]]>
    </select>

    <select id="queryItems"
            statementType="CALLABLE"
            resultMap="com.xin.dao.ItemMapper.BaseResultMap"
            parameterType="java.util.Map">
        <![CDATA[

          call queryPet(
            #{in_kindid , mode=IN ,jdbcType=VARCHAR},
	        #{in_productid ,mode=IN ,jdbcType=VARCHAR},
	        #{in_itemid,  mode=IN ,jdbcType=VARCHAR}
          )

        ]]>
    </select>

</mapper>